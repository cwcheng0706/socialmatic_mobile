<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logo_imageview"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@+drawable/socialmatic_logo" />

            <ImageView
                android:layout_width="431dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@+drawable/login_divider" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4" />

                <TextView
                    android:id="@+id/account_lab"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:text="Account"
                    android:textColor="#499671"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/account_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.85"
                    android:background="@+drawable/enter_frame_1"
                    android:hint="Account"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.45" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4" />

                <TextView
                    android:id="@+id/password_lab"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:text="Password"
                    android:textColor="#499671"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/password_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.85"
                    android:background="@+drawable/enter_frame_1"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.45" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4" />

                <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:text="Forgot Password?"
                    android:textColor="#BFBFBF"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.25" />

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/green_btn_selector"
                    android:text="Login"
                    android:textColor="#fff" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.45" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2" />

                <Button
                    android:id="@+id/register"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/white_btn_selector"
                    android:text="Register"
                    android:textColor="#499671" />
<!--     
                <Button
                    android:id="@+id/enroll"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:background="@drawable/white_btn_selector"
                    android:text="Enroll device"
                    android:textColor="#499671" />
-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mysetting_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fff"
            android:orientation="vertical" >
<!--
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="@+drawable/info_bar"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/userphoto_imageview"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp" />
                
                <TextView
                    android:id="@+id/username_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Forgot Password?"
                    android:textColor="#499671"
                    android:textSize="16sp" />
            </LinearLayout>
-->
            <TextView
                android:id="@+id/mysettings_lab"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="My Settings"
                android:textColor="#BFBFBF"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="431dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@+drawable/login_divider" />

            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#fff"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/general_btn"
                        android:layout_width="427dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/white_btn_selector2"
                        android:gravity="left|center_vertical"
                        android:text="General"
                        android:textColor="#499671" />

                    <Button
                        android:id="@+id/privaacy_btn"
                        android:layout_width="427dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/white_btn_selector2"
                        android:gravity="left|center_vertical"
                        android:text="Privacy"
                        android:textColor="#499671" />

                    <Button
                        android:id="@+id/notification_btn"
                        android:layout_width="427dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/white_btn_selector2"
                        android:gravity="left|center_vertical"
                        android:text="Notification"
                        android:textColor="#499671" />

                    <Button
                        android:id="@+id/change_password_btn"
                        android:layout_width="427dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/white_btn_selector2"
                        android:gravity="left|center_vertical"
                        android:text="Change Password"
                        android:textColor="#499671" />

                    <Button
                        android:id="@+id/delete_account_btn"
                        android:layout_width="427dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/white_btn_selector2"
                        android:gravity="left|center_vertical"
                        android:text="Delete Account"
                        android:textColor="#499671" />

                    <Button
                        android:id="@+id/signout_btn"
                        android:layout_width="427dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/white_btn_selector2"
                        android:gravity="left|center_vertical"
                        android:text="Sign Out"
                        android:textColor="#499671" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>