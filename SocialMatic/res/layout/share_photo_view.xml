            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Tag:"
                    android:textColor="#499671"
                    android:textSize="16sp" />

                <FrameLayout
                    android:layout_width="134dp"
                    android:layout_height="34dp" >

                    <EditText
                        android:id="@+id/tag_edittext"
                        android:layout_width="134dp"
                        android:layout_height="34dp"
                        android:background="@+drawable/enter_frame_3"
                        android:paddingLeft="10dp"
                        android:paddingRight="30dp"
                        android:hint="Tag"
                        android:imeOptions="actionDone"
                        android:scrollHorizontally="false"
                        android:scrollbars="vertical"
                        android:singleLine="true" />
                    <Button
                        android:id="@+id/add_tag_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/button_green_add_selector" />
                </FrameLayout>

                <ScrollView
                    android:id="@+id/tags_scrollview"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp" >

                    <LinearLayout
                        android:id="@+id/add_tag_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical" >
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Share To"
                    android:textColor="#499671"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/facebook_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_btn_selector"
                        android:text="Facebook"
                        android:textColor="#499671" />

                    <Button
                        android:id="@+id/twitter_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_btn_selector"
                        android:text="Twitter"
                        android:textColor="#499671" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>