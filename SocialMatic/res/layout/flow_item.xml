<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/subject_textview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#499671"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/username_textview"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="#499671"
                android:textSize="16sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp"
            android:background="@+drawable/photo_frame_l" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ImageView
                    android:id="@+id/photo_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:paddingBottom="2dp"
                    android:paddingLeft="0.8dp"
                    android:paddingRight="2dp"
                    android:paddingTop="1.4dp"
                    android:scaleType="centerCrop" />

                <ProgressBar
                    android:id="@+id/photo_progressbar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@+drawable/flow_photo_info_cool" />

                    <TextView
                        android:id="@+id/cool_account_textview"
                        android:layout_width="37dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="2145"
                        android:textColor="#6A470F"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@+drawable/flow_photo_info_view" />

                    <TextView
                        android:id="@+id/see_account_textview"
                        android:layout_width="37dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="999"
                        android:textColor="#6A470F"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@+drawable/flow_photo_info_pin" />

                    <TextView
                        android:id="@+id/fit_account_textview"
                        android:layout_width="37dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="1"
                        android:textColor="#6A470F"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/share_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_share_btn_selector" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:background="@+drawable/flow_frame_name"
                android:orientation="horizontal"
                android:scaleType="fitCenter" >

                <ImageView
                    android:id="@+id/userphoto_imageview"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/photo_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#696969"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/shot_date_textview"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#6A470F"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@+drawable/flow_frame_location"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bc_imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/map_imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:background="@+drawable/flow_google_pin"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flow_linearlyout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Miles:"
                    android:textColor="#6A470F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/milves_textview"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="#BFBFBF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Cities:"
                    android:textColor="#6A470F"
                    android:textSize="12sp" />

                <ScrollView
                    android:id="@+id/cities_scrollview"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp" >

                    <LinearLayout
                        android:id="@+id/add_city_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical" >
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Tags:"
                    android:textColor="#6A470F"
                    android:textSize="12sp" />

                <ScrollView
                    android:id="@+id/tags_scrollview"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp" >

                    <LinearLayout
                        android:id="@+id/add_tags_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical" >
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/offer_linearlyout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Accepted:"
                    android:textColor="#6A470F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/accepted_textview"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="10"
                    android:textColor="#BFBFBF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_linearlyout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Views:"
                    android:textColor="#6A470F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/views_textview"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="10"
                    android:textColor="#BFBFBF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Attended users:"
                    android:textColor="#6A470F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/attended_users_textview"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="10"
                    android:textColor="#BFBFBF"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Cities:"
                    android:textColor="#6A470F"
                    android:textSize="12sp" />

                <ScrollView
                    android:id="@+id/event_cities_scrollview"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp" >

                    <LinearLayout
                        android:id="@+id/event_add_city_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical" >
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tmp_imageview"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/cool_btn"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_orange_selector"
                android:text="UNCOOL"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/path_btn"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_green_1_selector"
                android:text="PATHS"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/comment_btn"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_green_1_selector"
                android:text="COMMENTS"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>