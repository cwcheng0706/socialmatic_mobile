<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:id="@+id/accept_type_textview"
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:layout_gravity="right|top"
            android:background="@drawable/event_status_green"
            android:textColor="#fff"
            android:gravity="center"/>
        
        <LinearLayout
            android:id="@+id/item_linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bc_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/user_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#6A470F"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/content_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#696969"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/auth_type_btn"
                android:layout_width="59dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_gray"
                android:enabled="false"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/follow_btn"
                android:layout_width="59dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_orange_selector"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/message_btn"
                android:layout_width="59dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_green_1_selector"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>